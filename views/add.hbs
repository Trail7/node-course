<h1>Add Product</h1>
{{#if error}}
<p class="alert">{{error}}</p>
{{/if}}

<form action='/add' method='POST' novalidate>
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{data.title}}">
        <label for="title">Product Name</label>
        <span class="helper-text" data-error="wrong">Enter product name</span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" value="{{data.price}}">
        <label for="price">Product Price</label>
        <span class="helper-text" data-error="wrong">Enter valid price</span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{data.img}}">
        <label for="img">Product image</label>
        <span class="helper-text" data-error="wrong">Enter image url</span>
    </div>

    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn btn-primary">Add product</button>
</form>
